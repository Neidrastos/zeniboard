{% extends 'base-admin.html.twig' %}

{% block body %}

    <div class="row">
        <div class="col-lg-8 col-lg-offset-2">
            <h1>Contacter un administrateur</h1>
            <form id="contact-form" method="post" action="{{ path('contact') }}" role="form">
                <div class="messages"></div>
                <div class="controls">

                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="form_name">Prénom *</label>
                                <input id="form_name" type="text" name="name" class="form-control" placeholder="Indiquez votre prénom *" required="required" data-error="Votre prénom est requis.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="form_lastname">Nom *</label>
                                <input id="form_lastname" type="text" name="surname" class="form-control" placeholder="Indiquez votre nom *" required="required" data-error="Votre nom est requis.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="form_email">Email *</label>
                                <input id="form_email" type="email" name="email" class="form-control" placeholder="Indiquez votre email *" required="required" data-error="Un email est requis.">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="form_phone">Téléphone</label>
                                <input id="form_phone" type="tel" name="phone" class="form-control" placeholder="Indiquez votre numéro de téléphone">
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label for="form_message">Message *</label>
                                <textarea id="form_message" name="message" class="form-control" placeholder="Message pour l'administrateur *" rows="4" required="required" data-error="Pensez à laisser un message !"></textarea>
                                <div class="help-block with-errors"></div>
                            </div>
                        </div>
                        <div class="col-md-12">
                            <p class="text-muted float-right"><strong>*</strong> Ces champs sont requis.</p>
                        </div>
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success btn-send float-right" value="Envoyer le message">
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}